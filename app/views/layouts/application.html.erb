  </head>

<body>
<div>
  <header id="nav-wrapper">
    <nav id="nav">
      <div class="nav left">
        <span class="gradient skew"><h1 class="logo un-skew"><a href="/flats">Flat Finder</a></h1></span>
        <button id="menu" class="btn-nav"><span class="fas fa-bars"></span></button>
      </div>
      <div class="nav right">
        <a href="/flats" class="nav-link active"><span class="nav-link-span"><span class="u-nav">Home</span></span></a>
        <a href="/flats/new" class="nav-link"><span class="nav-link-span"><span class="u-nav">add flat</span></span></a>
      </div>
    </nav>
  </header>
</div>
<div>
  <main>
    <section id="home">
    <%= yield %>
    </section>
  </main>
  </div>

</body>
</html>
